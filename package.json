{
  "name": "tzafrir-shuttle-system",
  "version": "1.0.0",
  "description": "Tzafrir Shuttle System - Full Stack Application",
  "scripts": {
    "start": "docker-compose up --build -d",
    "stop": "docker-compose down",
    "dev": "docker-compose up --build",
    "restart": "npm run stop && npm start",
    "logs": "docker-compose logs -f",
    "logs:backend": "docker-compose logs -f backend",
    "logs:frontend": "docker-compose logs -f frontend",
    "status": "docker-compose ps",
    "clean": "docker-compose down -v --rmi all",
    "backend": "docker-compose up --build -d backend postgres",
    "frontend": "docker-compose up --build -d frontend",
    "db:reset": "docker-compose down postgres && docker volume rm shuttle-zafrir-07_postgres_data && docker-compose up -d postgres",
    "build": "docker-compose build --no-cache",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:frontend": "cd frontend && npm install"
  },
  "keywords": ["shuttle", "transport", "fastapi", "react", "docker"],
  "author": "Shuttle System Team",
  "license": "MIT"
}